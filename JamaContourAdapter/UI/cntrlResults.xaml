<UserControl x:Class="Inflectra.SpiraTest.AddOns.JamaContourAdapter.UI.cntrlResults"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
			 Padding="7"
			 Background="Transparent"
			 >
	<DockPanel LastChildFill="True">
		<StackPanel Orientation="Vertical">
			<TextBlock Name="txbFinishStatus" TextWrapping="Wrap" FontWeight="Bold" FontSize="14">
				Requirement import successful.
			</TextBlock>
			<TextBlock Name="txbFinishMessage" TextWrapping="Wrap">
				Some requirements were deleted off of the SpiraTeam server and were not re-imported. All other requirements were imported successfully.
			</TextBlock>
			<Separator Margin="0,5,0,5"  />
			<CheckBox Name="chkMinTray">
				<TextBlock TextWrapping="Wrap">
					Minimize to System Tray <LineBreak />
					Selecting this option will minimize the application to the system tray, allowing quick selection of re-importing requirements from the context menu.
				</TextBlock>
			</CheckBox>
		</StackPanel>
	</DockPanel>
</UserControl>
